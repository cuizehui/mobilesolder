<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cuizehui.Actitys.FlowDataActivity">
 <include layout="@layout/tool_bar"/>
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:id="@+id/flow_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <android.support.v7.widget.CardView

     android:layout_gravity="center"
     android:layout_width="320dp"
     android:layout_height="70dp"
     android:layout_margin="2dip">
  <RelativeLayout
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <ProgressBar
       android:id="@+id/flow_pgbar"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       style="@style/Widget.AppCompat.ProgressBar.Horizontal"
       android:progressDrawable="@drawable/progress_select"
       />
   <TextView
       android:id="@+id/flowpg_text"
       android:text="正在加载请稍后......"
       android:layout_centerInParent="true"
       android:layout_below="@id/flow_pgbar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

  </RelativeLayout>

 </android.support.v7.widget.CardView>
</LinearLayout>
 <RelativeLayout
     android:id="@+id/fragment_rl"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

 </RelativeLayout>
</LinearLayout>
