<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/oneac_rl"
    tools:context="com.cuizehui.Actitys.LostfindActivity">
<!--android:background="@drawable/lostfind"-->

    <TextView
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:id="@+id/setnumber_tv"
        android:text="设置安全电话:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <EditText
       android:inputType="phone"
       android:id="@+id/number_ev"
       android:layout_toRightOf="@+id/setnumber_tv"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/current_tv"
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:layout_below="@id/setnumber_tv"
        android:text="开启状态:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/servicecurrent_tv"
        android:paddingTop="20dp"
        android:layout_below="@id/number_ev"
        android:layout_toRightOf="@id/current_tv"
        android:layout_width="38dp"
        android:layout_height="wrap_content" />
   <Button
       android:layout_below="@id/number_ev"
       android:layout_alignParentRight="true"
      android:id="@+id/start_lostfoundservice"
      android:text="设置追踪服务"
      android:textSize="20sp"
      android:textColor="#D9006c"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     />
<ImageView
    android:background="@drawable/lostfind"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="370dp" />
</RelativeLayout>
