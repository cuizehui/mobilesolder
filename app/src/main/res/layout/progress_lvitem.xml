<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:id="@+id/progress_pic"
        android:layout_alignParentLeft="true"
        android:layout_width="64dip"
        android:layout_height="64dip" />
    <TextView
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:textColor="#f8212121"
        android:layout_toRightOf="@id/progress_pic"
        android:id="@+id/progress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#f8212121"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/progress_pic"
        android:layout_below="@id/progress_name"
        android:id="@+id/progress_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/apk_imclean"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip"
        android:layout_marginRight="20dip"
        android:layout_width="36dp"
        android:layout_height="36dp" />
</RelativeLayout>