<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:gravity="center|center_horizontal"
    android:padding="10dp"
    android:layout_height="wrap_content">
<TextView
    android:gravity="center"
   android:background="#8136a6"
    android:text="黑名单拦截"
    android:textColor="#ffeed2"
    android:textSize="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
 <EditText
     android:id="@+id/addblack_et"
     android:inputType="phone"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:textColor="#8136a6"
                android:text="短信拦截"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:textColor="#8136a6"
                android:id="@+id/sms_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#8136a6"
                android:textSize="20dp"
                android:text="电话拦截"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:text=""
                android:id="@+id/phone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#6A5ACD"
            android:id="@+id/add_blackmessage"
            android:layout_weight="1"
            android:text="添加"
            android:textSize="15dp"
            android:textColor="#ffeed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
        android:background="#e7445e"
        android:textColor="#ffeed2"
        android:id="@+id/cecel_bt"
        android:layout_weight="1"
        android:textSize="15dp"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>